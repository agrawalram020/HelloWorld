pipeline {
  agent any
  stages {
    stage("Run unit tests"){
      steps {
        script {
          try {
            bat 'echo in the try block'
          }
	  catch(Exception e)
	  {
	  bat 'echo in catch block'
	  }
	  finally {
            bat 'echo finally'
          }
        }
      }
    }
    stage ('Speak') {
      steps{
        echo "Hello, CONDITIONAL"
      }
    }
  }
}
